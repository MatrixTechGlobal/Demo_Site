<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Product Listing – Namespaced</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/ProductCategoryListing.css" rel="stylesheet">
    <style>
        
    </style>
</head>

<body>

    <div class="pl-root">
        <div class="pl-page">
            <div class="pl-body">

                <!-- Controls -->
                <div class="pl-controls">
                    <div class="pl-title">Products</div>

                    <div class="d-flex align-items-center">
                        <label for="pl-sort" class="me-2 text-muted">Sort by</label>
                        <select id="pl-sort" class="form-select form-select-sm" style="min-width:170px;">
                            <option value="default">Best selling</option>
                            <option value="popular">Most reviews</option>
                            <option value="price_low">Price: Low to High</option>
                            <option value="price_high">Price: High to Low</option>
                            <option value="alpha">A → Z</option>
                        </select>
                    </div>
                </div>

                <!-- PRODUCT GRID -->
                <div id="pl-grid" class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 pl-products-grid">

                    <!-- PRODUCT ITEM TEMPLATE -->
                    <div class="col" data-price="40" data-reviews="324" data-title="Triple Latte" data-order="1">
                        <div class="pl-product-card">
                            <div class="pl-media">
                                <div class="pl-badge">TOP RATED</div>
                                <img src="/mnt/data/769584d5-a83e-4e30-9f00-9b531a9d81d5.png" alt="Triple Latte">
                            </div>
                            <div class="pl-card-body">
                                <a href="#" class="pl-product-title">TRIPLE LATTE</a>
                                <div class="pl-product-sub">Cold Brew + Frothed Milk</div>

                                <div class="pl-price-row">
                                    <div class="d-flex align-items-baseline gap-1">                                       
                                        <span class="pl-price">$40.00</span>
                                        <span class="pl-price-old">$55.00</span>
                                    </div>
                                    <div class="pl-promo">25% OFF BULK SIZES</div>
                                </div>

                                <div class="mt-3 d-flex justify-content-between align-items-center">
                                    <button class="pl-btn-add">Add to cart</button>
                                    <small class="text-muted">324 reviews</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col" data-price="40" data-reviews="229" data-title="Double Latte" data-order="2">
                        <div class="pl-product-card">
                            <div class="pl-media">
                                <img src="/mnt/data/769584d5-a83e-4e30-9f00-9b531a9d81d5.png" alt="Double Latte">
                            </div>
                            <div class="pl-card-body">
                                <a href="#" class="pl-product-title">DOUBLE LATTE</a>
                                <div class="pl-product-sub">Cold Brew + Frothed Milk</div>

                                <div class="pl-price-row">
                                    <div class="pl-price">$40.00</div>
                                    <div class="pl-promo">25% OFF BULK SIZES</div>
                                </div>

                                <div class="mt-3 d-flex justify-content-between align-items-center">
                                    <button class="pl-btn-add">Add to cart</button>
                                    <small class="text-muted">229 reviews</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col" data-price="40" data-reviews="179" data-title="Vanilla Latte" data-order="3">
                        <div class="pl-product-card">
                            <div class="pl-media">
                                <img src="/mnt/data/769584d5-a83e-4e30-9f00-9b531a9d81d5.png" alt="Vanilla Latte">
                            </div>
                            <div class="pl-card-body">
                                <a href="#" class="pl-product-title">VANILLA LATTE</a>
                                <div class="pl-product-sub">Cold Brew + Real Vanilla</div>

                                <div class="pl-price-row">
                                    <div class="pl-price">$40.00</div>
                                    <div class="pl-promo">25% OFF BULK SIZES</div>
                                </div>

                                <div class="mt-3 d-flex justify-content-between align-items-center">
                                    <button class="pl-btn-add">Add to cart</button>
                                    <small class="text-muted">179 reviews</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col" data-price="40" data-reviews="293" data-title="Mocha Latte" data-order="4">
                        <div class="pl-product-card">
                            <div class="pl-media">
                                <img src="/mnt/data/769584d5-a83e-4e30-9f00-9b531a9d81d5.png" alt="Mocha Latte">
                            </div>
                            <div class="pl-card-body">
                                <a href="#" class="pl-product-title">MOCHA LATTE</a>
                                <div class="pl-product-sub">Cold Brew + Real Cocoa</div>

                                <div class="pl-price-row">
                                    <div class="pl-price">$40.00</div>
                                    <div class="pl-promo">25% OFF BULK SIZES</div>
                                </div>

                                <div class="mt-3 d-flex justify-content-between align-items-center">
                                    <button class="pl-btn-add">Add to cart</button>
                                    <small class="text-muted">293 reviews</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col" data-price="40" data-reviews="197" data-title="Latte Variety Pack" data-order="5">
                        <div class="pl-product-card">
                            <div class="pl-media">
                                <img src="/mnt/data/769584d5-a83e-4e30-9f00-9b531a9d81d5.png" alt="Latte Variety Pack">
                            </div>
                            <div class="pl-card-body">
                                <a href="#" class="pl-product-title">LATTE VARIETY PACK</a>
                                <div class="pl-product-sub">Vanilla, Triple, Mocha, Double</div>

                                <div class="pl-price-row">
                                    <div class="pl-price">$40.00</div>
                                    <div class="pl-promo">25% OFF BULK SIZES</div>
                                </div>

                                <div class="mt-3 d-flex justify-content-between align-items-center">
                                    <button class="pl-btn-add">Add to cart</button>
                                    <small class="text-muted">197 reviews</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col" data-price="46" data-reviews="168" data-title="Oatmilk Double Latte" data-order="6">
                        <div class="pl-product-card">
                            <div class="pl-media">
                                <img src="/mnt/data/769584d5-a83e-4e30-9f00-9b531a9d81d5.png" alt="Oatmilk Double Latte">
                            </div>
                            <div class="pl-card-body">
                                <a href="#" class="pl-product-title">OATMILK DOUBLE LATTE</a>
                                <div class="pl-product-sub">Oatmilk + Cold Brew</div>

                                <div class="pl-price-row">
                                    <div class="pl-price">$46.00</div>
                                    <div class="pl-promo">25% OFF BULK SIZES</div>
                                </div>

                                <div class="mt-3 d-flex justify-content-between align-items-center">
                                    <button class="pl-btn-add">Add to cart</button>
                                    <small class="text-muted">168 reviews</small>
                                </div>
                            </div>
                        </div>
                    </div>

                </div><!-- grid -->
            </div>
        </div>
    </div><!-- pl-root -->
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script scr="js/ProductCategoryListing.js">
       
    </script>

</body>
</html>
