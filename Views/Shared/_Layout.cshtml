<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eCommerce_Site</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/carousel.css" asp-append-version="true" />
</head>
<body>
    <div class="hdrx">
        <header class="site-header" role="banner">
            <div class="hf-wrap" role="navigation" aria-label="Main navigation">
                <div class="hf-left"><a class="brand" href="#">My Store</a></div>

                <nav class="hf-center" aria-label="Primary">
                    <ul class="nav" role="menubar">
                        <li><a href="#">Home</a></li>
                        <li><a href="#">Catalog</a></li>
                        <li><a href="#">Products</a></li>
                        <li><a href="#">Contact</a></li>
                    </ul>
                </nav>

                <div class="hf-right">
                    <div style="display:flex;align-items:center;gap:10px;">
                        <div class="cart-wrap">
                            <button class="icon-btn" title="Cart" aria-label="Cart">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none"><path d="M6 7h12l-1.2 9H7.2z" stroke="#333" stroke-width="1.6" stroke-linecap="round" /><path d="M9 7V6a3 3 0 1 1 6 0v1" stroke="#333" stroke-width="1.6" stroke-linecap="round" /></svg>
                            </button>
                            <span class="cart-badge" id="cartCount" aria-live="polite">4</span>
                        </div>

                        <div style="position:relative">
                            <button id="accountBtn" class="icon-btn" aria-haspopup="true" aria-expanded="false" title="Account">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none"><circle cx="12" cy="8" r="3.4" stroke="#333" stroke-width="1.6" /><path d="M4 20c1.5-3.8 5-6 8-6s6.5 2.2 8 6" stroke="#333" stroke-width="1.6" stroke-linecap="round" /></svg>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- hidden fallback toggle -->
                <input id="searchToggle" type="checkbox" />

                <!-- search: absolute so it overlays header area when open -->
                <div id="searchInner" class="search-inner" role="search" aria-label="Site search">
                    <input id="searchInput" class="search-input" type="search" placeholder="Search products, categories or styles" autocomplete="off" />
                    <button id="searchClear" class="search-clear" aria-label="Clear search" title="Clear">
                        <svg width="14" height="14" viewBox="0 0 24 24"><path d="M6 6l12 12M18 6L6 18" stroke="#666" stroke-width="1.6" stroke-linecap="round" fill="none" /></svg>
                    </button>
                </div>

                <!-- visible icon label (we prevent default and call toggleSearch) -->
                <label id="searchTrigger" class="icon-label" for="searchToggle" title="Search" role="button" aria-pressed="false"
                       onclick="(function(ev){ ev.preventDefault(); toggleSearch(); })(event);">
                    <svg width="18" height="18" viewBox="0 0 24 24" aria-hidden="true"><circle cx="11" cy="11" r="6" stroke="#333" stroke-width="1.6" fill="none" /><path d="M21 21l-4.35-4.35" stroke="#333" stroke-width="1.6" stroke-linecap="round" fill="none" /></svg>
                </label>

            </div>
        </header>
        <div class="info-bar-slider" aria-roledescription="marquee" role="region" aria-label="Site benefits">
            <button class="info-arrow info-prev" aria-label="Previous">‹</button>

            <div class="info-viewport" tabindex="0" aria-live="polite">
                <div class="info-track">
                    <div class="info-item">Free Shipping over ₹499</div>
                    <div class="info-item">Easy 30-Day Returns</div>
                    <div class="info-item">Cash on Delivery Available</div>
                    <div class="info-item">100% Secure Payments</div>
                </div>
            </div>

            <button class="info-arrow info-next" aria-label="Next">›</button>
        </div>
        <div id="suggestBox" class="suggestions" aria-hidden="true"><ul id="suggestList"></ul></div>

        <div id="accountCard" class="account-card" role="dialog" aria-label="Account options" aria-hidden="true">
            <h4 style="margin:0 0 10px 0; text-align:center">Account</h4>
            <button class="btn-primary" id="signIn">Sign in</button>
            <button class="btn-secondary" id="signUp">Sign-up</button>
        </div>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - eCommerce_Site - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
